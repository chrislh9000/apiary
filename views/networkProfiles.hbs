<script>
var page = (String(window.location.href)).charAt(String(window.location.href).length - 1);
$('#network-prev-page').on('click', (event) => {
  event.preventDefault
  prevPage = String(Number(page) - 1)
  String(page) === 'l' ? window.location.href= '/users/all?page=1' :
  window.location.href=`/users/all?page=${prevPage}`
})

$('#network-next-page').on('click', (event) => {
  event.preventDefault
  nextPage = String(Number(page) + 1)
  String(page) === 'l' ? window.location.href= '/users/all?page=2' :
  window.location.href=`/users/all?page=${nextPage}`
})
</script>
