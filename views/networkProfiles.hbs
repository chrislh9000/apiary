<div style="" class="container-fluid network-profiles-container">
  <div style="display: block" class="scrolling-wrapper">
{{#each users}}
<div class="col-sm-12 col-md-12 col-lg-3 card card-profile" style="padding:15px; margin: 15px; justify-content: center" class = "container-fluid">
{{#if this.image}}
<img class="center-block" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); border: solid 3px #e6e6e6; height: 240px; width: 200px;" src="{{this.image.cloudinaryUrl}}"></img>
{{else}}
<img class="center-block" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); border: solid 3px #e6e6e6; height: 240px; width: 200px;" src="/profiles/1535005509011-avatar1.jpg"></img>
{{/if}}
<h5 style=""><b>{{this.name}}</b></h5>
<h5 style=""><b>{{this.school}}</b></h5>
<h5 style="font-size: 11px; text-transform: uppercase; color: maroon;"><b>{{this.email}}</b></h5>
<h5 style="font-size: 11px; color: indianred;"><b>{{this.intendedMajor}}</b></h5>
<a class = "btn apiary-button" href = '/users/{{this._id}}'>View Profile</a><br>
</div>
{{else}}
<h1>No Profiles Found... Try Again</h1>
{{/each}}
<div style="display: block">
</div>
<br>
{{#if paginationToggled}}
<nav style="display: block" aria-label="Page navigation example">
  <ul class="justify-content-center pagination pagination-lg">
    <li class="page-item"><a id="network-prev-page" class="page-link">Previous</a></li>
    <li style="margin-left:10px" class="page-item"><a class="page-link" href="/users/all?page=1">1</a></li>
