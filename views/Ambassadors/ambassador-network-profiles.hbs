<body class = "fixed-bg-sf"><div class="container-fluid network-profiles-container">
  <h1>APIARY NETWORK AMBASSADORS</h1><br><br>
  <div class="scrolling-wrapper">
{{#each ambassadors}}
<div class="card card-profile members-profiles" style="padding:15px; border:solid 1px black; margin: 15px; justify-content: center" class = "container-fluid">
{{#if this.user.image}}
<img class="center-block" style="height: 150px; width: 122px;" src="{{this.image.cloudinaryUrl}}"></img>
{{else}}
<img class="center-block" style="height: 150px; width: 122px;" src="/profiles/1535005509011-avatar1.jpg"></img>
{{/if}}
<h5 style="text-transform: uppercase"><b>{{this.user.name}}</b></h5>
<h5 style="text-transform: uppercase"><b>{{this.user.school}}</b></h5>
<h5 style="text-transform: uppercase; color: maroon;"><b>{{this.user.email}}</b></h5>
<h5 style="text-transform: uppercase; color: indianred;"><b>{{this.user.intendedMajor}}</b></h5>
<a class = "btn btn-success" href = '/ambassadors/{{this._id}}'>View Ambassador Profile</a><br><br>
</div>
{{/each}}
</div>
</div>
<br><br><br></body>
